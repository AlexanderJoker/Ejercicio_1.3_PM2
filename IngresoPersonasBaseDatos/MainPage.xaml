<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IngresoPersonasBaseDatos.MainPage"
             BackgroundImageSource="fon.jpg">
    <ScrollView>
        <StackLayout Margin="10,35,10,0">
            <Label Text="Tarea 1.3" TextColor="black" FontSize="Title"  HorizontalOptions="Center"/>
        <Image Source="person.jpg"
                   HeightRequest="300"
                   WidthRequest="500"
                   HorizontalOptions="CenterAndExpand"
                   Aspect="Fill"/>
        <Frame BackgroundColor="#10E817" Padding="20" CornerRadius="0" BorderColor="Black">
            <Label Text="Registros de Personas" HorizontalTextAlignment="Center" TextColor="black" FontSize="36"/>
        </Frame>
        <Button HorizontalOptions="Center" VerticalOptions="Center" Text="AGREGAR CONTACTO" Clicked="Button_Clicked"></Button>
        <Button x:Name="btnListPersons" HorizontalOptions="Center" VerticalOptions="Center" Text="VER CONTACTOS AGREGADOS" Clicked="btnListPersons_Clicked"></Button>
        <Label Text="Programacion Movil 2 2022" FontSize="Small" HorizontalOptions="Center" Padding="10" TextColor="Gray"></Label>
        <Label Text="Delbert Lira y Liliana autores" FontSize="Small" HorizontalOptions="Center" Padding="10" TextColor="Gray"></Label>

    </StackLayout>
      </ScrollView>
</ContentPage>
